{
    "tuid": {
        "database": {
            "name": "resources/tuid_app.db"
        },
        "hg": {
            "branch": "mozilla-central"
        },
        "hg_cache": {
            "use_cache": true,
            "hg": {
                "url": "https://hg.mozilla.org"
            },
            "branches": {
                "host": "http://localhost",
                "port": 9200,
                "index": "branches",
                "type": "branch",
                "tjson": false,
                "timeout": 300,
                "consistency": "one", // WE ONLY NEED ONE SHARD TO BE AVAILABLE
                "debug": false,
                "limit_replicas": false
            },
            "repo": {
                "host": "http://localhost",
                "port": 9200,
                "index": "repo",
                "type": "revision",
                "tjson": false,
                "timeout": 300,
                "consistency": "one", // WE ONLY NEED ONE SHARD TO BE AVAILABLE
                "debug": false,
                "limit_replicas": false
            }
        }
    },
    "flask": {
        "host": "0.0.0.0",
        "port": 8079,
        "debug": false,
        "threaded": true,
        "processes": 1
    },
    "constants": {
        "tuid.service.DEBUG": false,
        "pyLibrary.env.http.DEBUG": false,
        "pyLibrary.env.http.default_headers": {
            "Referer": "https://github.com/mozilla/TUID",
            "User-Agent": "TUID Service"
        },
        "pyLibrary.sql.sqlite.DEBUG": false,
        "mo_hg.hg_mozilla_org.DAEMON_HG_INTERVAL": 0,
        "mo_hg.hg_branches.TUID_BRANCHES": ["mozilla-central", "try"]
    },
    "debug": {
        "trace": true,
        "cprofile": {
            "enabled": false,
            "filename": "./results/profile.tab"
        },
        "log": [
            {
                "log_type": "console"
            },
            {
                "log_type": "ses",
                "from_address": "klahnakoski@mozilla.com",
                "to_address": "klahnakoski@mozilla.com",
                "subject": "[ALERT][STAGING] Problem in TUID Service",
                "$ref": "file://~/private.json#aws_credentials"
            },
            {
                "log_type": "elasticsearch",
                "host": "http://localhost",
                "index": "debug_tuid_service",
                "type": "tuid_service"
            },
            {
                "class": "logging.handlers.RotatingFileHandler",
                "filename": "/data1/logs/tuid_service.log",
                "maxBytes": 10000000,
                "backupCount": 10,
                "encoding": "utf8"
            }
        ]
    }
}
